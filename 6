#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	string str="C : \\Users\\Максим\\Desktop\\file.txt",name;
	bool ch=false;
	int x = str.size(),x1,x2;
	for (int i = x;i>0;i--) {
		if (str[i] == '\\' && ch) {
			x1 = i;
			break;
		}
		if (str[i] == '\\') {
			x2 = i;
			ch = true;
		}
	}
	name.resize(x2 - x1 - 1, ' ');
	for (int i = x1+1,j=0;i < x2;i++,j++) {
		name[j] = str[i];
	}
	cout << name << endl;
}
