#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	string str;
	cout << "Введите строку: ";
	getline(cin,str);
	int n = str.size(),x=0,min=n;
	for (int i = 0;i < n;i++) {
		if (str[i] == ' ') {
			if (min > x&&x!=0) {
				min = x;
			}
			x = 0;
		}
		else{
			x++;
		}
		cout << x << endl;
	}
	if (min > x&&x!=0) {
		min = x;
	}
	cout <<"min: "<< min << endl;
}
