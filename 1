#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	string str;
	bool ch=false;
	cout << "Введите строку: ";
	getline(cin,str);
	int n = str.size(),x=0;
	for (int i = 0;i < n;i++) {
		if (str[i] == ' ') {
			if (!ch) {
				x++;
				ch = true;
			}
		}
		else{
			ch = false;
		}
	}
	cout <<"Кол-во слов: "<< x+1 << endl;
}
