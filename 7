#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	string str,str1;
	getline(cin, str);
	int x = str.size(),n=0;
	str1.resize(x, ' ');
	for (int i = 1,j=0;i<x;i+=2,j++) {
		str1[j] = str[i];
		n++;
	}
	for (int i = 0;i<x;i += 2) {
		str1[n] = str[i];
		n++;
	}
	cout << str1 << endl;
}
